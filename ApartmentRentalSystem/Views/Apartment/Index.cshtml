@model IEnumerable<ApartmentRentalSystem.Models.Apartment.Apartment>

@{
    ViewData["Title"] = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HouseRentalMVC</title>
    <link href="~/css/apartmentcss.css" rel="stylesheet" />
</head>

<body>


    <h2>APARTMENTS TO RENT</h2>

    <div class="apartment-container">
        @foreach (var item in Model)
        {
            <div class="apartment-card">
                <div class="image-container">
                    <img alt="apartmentImg" src="@item.ImgUrl" />
                </div>
                <h3>@item.Address</h3>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </div>
        }

    </div>
</body>
</html>